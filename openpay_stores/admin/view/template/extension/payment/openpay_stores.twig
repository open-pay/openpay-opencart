{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-manufacturer" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">        
        {% if error_warning %}
            <div class="alert alert-danger">
                <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        
        {% if error_attention %}
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong>Warning!</strong> {{ error_attention }}
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-product" class="form-horizontal">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab-api" data-toggle="tab">Configuración de llaves</a></li>
                        <li><a href="#tab-general" data-toggle="tab">Configuración general de pago</a></li>
                        <li><a href="#tab-status" data-toggle="tab">Estatus</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active " id="tab-api">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="radio-test-mode">Modo sandbox</label>
                                <div class="col-sm-10">
                                    <label class="radio-inline">
                                        <input id="radio-test-mode" type="radio" name="payment_openpay_stores_mode" value="0" {% if not payment_openpay_stores_mode %} checked {% endif %} >{{ text_no }}
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="payment_openpay_stores_mode" value="1" {% if payment_openpay_stores_mode %} checked {% endif %} >{{ text_yes }}
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-title" >
                                    {{ entry_country }}
                                </label>
                                <div class="col-sm-10">                                                                     
                                    <select name="payment_openpay_stores_country" id="stores_country" class="form-control">
                                        <option value="MX" {% if country == "MX" %} selected {% endif %}>México</option>                                        
                                        <option value="CO" {% if country == "CO" %} selected {% endif %}>Colombia</option>                                        
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-test-merchant-id">
                                    Sandbox Merchant ID
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_openpay_stores_test_merchant_id" value="{{ payment_openpay_stores_test_merchant_id }}" class="form-control" id="input-test-merchant">
                                    {% if error_test_merchant_id %}
                                        <div class="text-danger">{{ error_test_merchant_id }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-test-secret">
                                    Sandbox llave secreta
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_openpay_stores_test_secret_key" value="{{ payment_openpay_stores_test_secret_key }}" class="form-control" id="input-test-secret">
                                    {% if error_test_secret_key %}
                                        <div class="text-danger">{{ error_test_secret_key }}</div>
                                    {% endif %}                                    
                                    {% if error_test_merchant_account %}
                                        <div class="text-danger">{{ error_test_merchant_account }}</div>
                                    {% endif %}
                                </div>
                            </div>                            
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-live-merchant-id">
                                    Producción Merchant ID
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_openpay_stores_live_merchant_id" value="{{ payment_openpay_stores_live_merchant_id }}" class="form-control" id="input-live-merchant">
                                    {% if error_live_merchant_id %}
                                        <div class="text-danger">{{ error_live_merchant_id }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-live-secret">
                                    Producción llave secreta
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_openpay_stores_live_secret_key" value="{{ payment_openpay_stores_live_secret_key }}" class="form-control" id="input-live-secret">
                                    {% if error_live_secret_key %}
                                        <div class="text-danger">{{ error_live_secret_key }}</div>
                                    {% endif %}
                                    {% if error_live_merchant_account %}                                    
                                        <div class="text-danger">{{ error_live_merchant_account }}</div>
                                    {% endif %}
                                </div>
                            </div>                            
                        </div>
                        <div class="tab-pane" id="tab-general">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="select-module-status">
                                    Estatus
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_openpay_stores_status" id="select-module-status" class="form-control">
                                        {% if payment_openpay_stores_status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}  
                                    </select>
                                </div>
                            </div>
                                    
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-title" >
                                    Título
                                    <span class="glyphicon" data-toggle="popover" data-content="{{ help_title }}" style="cursor:pointer;" >
                                    </span>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_openpay_stores_title" value="{{ payment_openpay_stores_title }}" class="form-control" id="input-title" placeholder="{{ entry_title }}" >
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="select-geo-zone">
                                    Geo zonas
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_openpay_stores_geo_zone_id" id="select-geo-zone" class="form-control">
                                        <option value="0">{{ text_all_zones }}</option>
                                        {% for geo_zone in geo_zones %}
                                            <option value="{{ geo_zone.geo_zone_id }}" {% if geo_zone.geo_zone_id == payment_openpay_stores_geo_zone_id %} selected {% endif %} >{{ geo_zone.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>                            
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-total">
                                    {{ entry_total }}
                                    <span class="glyphicon" data-toggle="popover" data-content="{{ help_total }}" style="cursor:pointer;" ></span>
                                </label>
                                <div class="col-sm-10">
                                    <div class="input-group">
                                        {% if currency_symbol_left %}
                                        <span class="input-group-addon">{{ currency_symbol_left }}</span>
                                        {% endif %}
                                        <input type="text" id="input-total" class="form-control" name="payment_openpay_stores_total" value="{{ payment_openpay_stores_total }}" >
                                        {% if currency_symbol_right %}
                                        <span class="input-group-addon">{{ currency_symbol_right }}</span>
                                        {% endif %}
                                    </div>
                                    {% if error_total %}
                                        <div class="text-danger">{{ error_total }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-sort-order">
                                    Ordenamiento
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" id="input-sort-order" class="form-control" name="payment_openpay_stores_sort_order" value="{{ payment_openpay_stores_sort_order }}" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-deadline">
                                    Límite de horas para pago
                                    <span class="glyphicon" data-toggle="popover" data-content="Define cuantas horas máximo tendrá el cliente para pagar una vez que se genera el recibo de pago." style="cursor:pointer;" ></span>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" id="input-deadline" class="form-control" name="payment_openpay_stores_deadline" value="{{ payment_openpay_stores_deadline }}" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-iva">
                                    {{ entry_iva }}
                                    <span class="glyphicon" data-toggle="popover" data-content="{{ help_iva }}" style="cursor:pointer;" ></span>
                                </label>
                                <div class="col-sm-10">
                                    <div class="input-group">
                                        {% if currency_symbol_left %}
                                        <span class="input-group-addon">{{ currency_symbol_left }}</span>
                                        {% endif %}
                                        <input type="text" id="input-iva" class="form-control" name="payment_openpay_stores_iva" value="{{ payment_openpay_stores_iva }}" >
                                        {% if currency_symbol_right %}
                                        <span class="input-group-addon">{{ currency_symbol_right }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="show_map">
                                    Mostrar mapa
                                    <span class="glyphicon" data-toggle="popover" data-content="Al seleccionar esta opción, un mapa se desplegará mostrando las tiendas más cercanas al momento mostrar el recipo de pago (https://www.openpay.mx/docs/stores-map.html)." data-html="true" style="cursor:pointer;" ></span>
                                </label>
                                <div class="col-sm-10">                                                                     
                                    <select name="payment_openpay_stores_show_map" id="show_map" class="form-control">
                                        <option value="0" {% if show_map == "0" %} selected {% endif %}>NO</option>                                        
                                        <option value="1" {% if show_map == "1" %} selected {% endif %}>SI</option>                                        
                                    </select>
                                </div>
                            </div>        
                        </div>
                        <div class="tab-pane" id="tab-status">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="select-new">
                                    Estatus de la orden
                                    <span class="glyphicon" data-toggle="popover" data-content="Una vez que la transacción sea confirmada como pagada, el estatus de la orden se marcará con el valor que aquí definas, mientras quedarán en un estatus: 'Pendiente'." data-html="true" style="cursor:pointer;" ></span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="payment_openpay_stores_order_status_id" id="select-new" class="form-control">                                        
                                        {% for order_status in order_statuses %}                                                                                    
                                            <option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_openpay_stores_order_status_id %} selected {% endif %}>{{ order_status.name }}</option>                                        
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>                            
                        </div>
                    </div><!-- .tab-content -->
                </form><!-- #form -->
            </div><!-- .panel-body -->
        </div><!--.panel .panel-default -->
    </div><!-- .container-fluid -->
</div><!-- #content -->
<script>
    'use strict';
    $('[data-toggle=\'popover\']').popover({
        title: '',
        html: true,
        template: '<div class="popover" role="tooltip"><div class="arrow"></div><h3 class="popover-title"></h3><div class="popover-content" style="min-width:150px;"></div></div>'
    });
</script>
<script type="text/javascript" src="./view/javascript/openpay/openpay_stores.js"></script>